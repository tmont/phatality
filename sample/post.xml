<?xml version="1.0" encoding="utf-8"?>

<phatality-mapping persister="pdo" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../src/Phatality/Mapping/phatality-mapping.xsd">
	<class name="Phatality\Sample\Post" source="test.posts" getter="accessorMethod" setter="accessorMethod">
		<id xsi:type="single" name="id" setter="reflectedPrivateField" generator="singleAutoIncrement" column="post_id" />

		<property name="title" />
		<property name="postData" column="postdata" />
		<property name="status" column="post_status" setter="reflectedPrivateField" />
		
		<many-to-one name="user" class="Phatality\Sample\User" column="user_id"/>
	</class>
</phatality-mapping>